@{
    DolphinWeb.Models.RoleResp Model_Roles = ViewBag.Roles;


    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
 
    <div class="col-md-12 d-flex align-items-stretch grid-margin">
      
        <div class="row flex-grow">
      

            @{if (!String.IsNullOrEmpty(@ViewBag.ErrorMsg))
                {
                    <div class="alert alert-danger" role="alert" style="margin:auto;width:100%;">
                        @ViewBag.ErrorMsg
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    </div>
                }
         
            }

            <div class="col-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Roles</h4>
                        <p class="card-description">

                        </p>
                        <form class="forms-sample" method="post" action="" id="validate-form">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Title</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" name="RoleName" value="@((Model_Roles != null) ? Model_Roles.RoleName : string.Empty)" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">IsRoleActive</label>
                                        <div class="col-sm-4">

                                        </div>
                                        <div class="col-sm-5">
                                            <div class="form-check form-check-flat">
                                                <label class="form-check-label">
                                                    <input type="checkbox" class="form-check-input" Value="true"  name="IsRoleActive">

                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Description</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" name="RoleDesc" value="@((Model_Roles != null) ? Model_Roles.RoleDesc : string.Empty)"/>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-sm-2">

                                        </div>
                                        <div class="col-sm-7 pull-right" style="margin-left: 270px;">
                                            <button type="submit" class="btn btn-success mr-2">Update</button>
                                            <button class="btn btn-light" type="reset">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
