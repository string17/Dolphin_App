@{
    DolphinService.Response.UserDetailsResponse Model_UserDetails = ViewBag.UserDetails;
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}


<div class="content-wrapper d-flex align-items-center auth lock-full-bg">
    <div class="row w-100">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-transparent text-left p-5 text-center">
                <img src="~/assets/UserImg/@(Model_UserDetails.UserDetails.FirstOrDefault().UserImg)" class="lock-profile-img" alt="img">
                <form class="pt-5" action="/dolphin/lockaccount" method="post" id="validate-form">
                    <div class="form-group">
                        <label for="examplePassword1">Password to unlock</label>
                        <input type="password" class="form-control text-center" name="Password" id="examplePassword1" placeholder="Password" required>
                    </div>
                    <input type="text" class="form-control" name="UserName" value="@((Model_UserDetails != null) ? Model_UserDetails.UserDetails.FirstOrDefault().UserName : string.Empty)" style="display: none;">
                    <div class="mt-5">
                        <button class="btn btn-block btn-primary btn-lg font-weight-medium">Unlock</button>
                    </div>
                    <div class="mt-3 text-center">
                        <a href="@Url.Action("/logout")" class="auth-link text-white">Sign in using a different account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- content-wrapper ends -->
